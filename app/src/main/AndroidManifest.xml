<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".cc.BmiApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:replace="android:fullBackupContent,android:dataExtractionRules"
        android:theme="@style/Theme.BmiShow"
        tools:targetApi="31">
        <activity android:name=".ui.show.qqqqddd.KkkppQQ"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <data
                    android:host="com.sophisticated.person.under.sun"
                    android:scheme="com.sophisticated.person.under.sun" />
            </intent-filter>
        </activity>
        <activity-alias
            android:name="com.sophisticated.person.under.sun.ui.show.qqqqddd.Kkkpp"
            android:enabled="false"
            android:exported="true"
            android:targetActivity=".ui.show.qqqqddd.KkkppQQ">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>
        <activity android:name=".ui.show.main.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"/>
        <activity android:name=".ui.show.plus.AddActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.show.we.WeightActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <activity android:name=".ui.show.resu.ResultActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>