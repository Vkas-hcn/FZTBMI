<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/con_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/bg_menu"
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_we_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024/6/1"
            android:textColor="#FFA6A6A6"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_we_date_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:34"
            android:textColor="#FFA6A6A6"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_we_desc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_we_date" />
        <TextView
            android:id="@+id/tv_we_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:textColor="#FF333333"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="@+id/tv_we_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_we_date" />

        <TextView
            android:id="@+id/tv_we_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="KG"
            android:textColor="#FF333333"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_we_value"
            app:layout_constraintStart_toEndOf="@+id/tv_we_value" />

        <ImageView
            android:id="@+id/img_note"
            android:layout_width="wrap_content"
            android:layout_height="11dp"
            android:src="@mipmap/ic_item_edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>